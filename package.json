{
  "private": true,
  "scripts": {
    "test": "LOCAL_DYNAMO_DB_PORT=4100 AWS_ACCESS_KEY_ID=dummy AWS_SECRET_ACCESS_KEY=dummy ./node_modules/.bin/jest",
    "lint-diff": "lint-diff --ext .js,.ts"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "jest": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module",
      "ecmaFeatures": {
        "impliedStrict": true
      }
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "airbnb-base",
      "plugin:jest/recommended",
      "prettier"
    ],
    "rules": {
      "no-console": [
        "off"
      ]
    }
  },
  "eslintIgnore": [
    "node_modules"
  ],
  "prettier": {
    "tabWidth": 2
  },
  "jest": {
    "globalSetup": "./scripts/tests/setupTests.js",
    "globalTeardown": "./scripts/tests/teardownTests.js",
    "roots": [
      "<rootDir>/lambdas"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "<rootDir>/lambdas/**/index.js"
    ],
    "coverageDirectory": "lambdas/coverage",
    "coverageReporters": [
      "html",
      "text"
    ],
    "testMatch": [
      "**/*.spec.js"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {
    "@yourcompany/tdk": "1.0.0",
    "@typescript-eslint/eslint-plugin": "^2.7.0",
    "@typescript-eslint/eslint-plugin-tslint": "^2.16.0",
    "@typescript-eslint/parser": "^2.7.0",
    "@vecchp/lint-diff": "^1.3.0",
    "eslint": "^6.6.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^23.0.3",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "grunt": "^1.4.1",
    "grunt-contrib-copy": "^1.0.0",
    "jest": "^27.1.0",
    "jest-html-reporters": "^2.1.6",
    "jest-junit": "^12.2.0",
    "prettier": "^2.3.2",
    "typescript": "^3.7.2"
  }
}
